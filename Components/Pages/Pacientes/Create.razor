@page "/pacientes/create"
@attribute [Authorize]

@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Npgsql
@using SistemaPacientesBlazor.Services
@using SistemaPacientesBlazor.Models
@inject IPacienteService PacienteService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Novo Paciente</h4>
            </div>
            <div class="card-body">
                <EditForm Model="@paciente" OnValidSubmit="HandleValidSubmit" FormName="CreatePaciente">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group mb-3">
                        <label for="cpf" class="form-label">CPF</label>
                        <InputText id="cpf" class="form-control" @bind-Value="paciente.Cpf" placeholder="000.000.000-00"
                            maxlength="11" />
                        <ValidationMessage For="@(() => paciente.Cpf)" />
                        <small class="text-muted">Apenas números (máx 11 dígitos)</small>
                    </div>
                    <div class="form-group mb-3">
                        <label for="nome" class="form-label">Nome Completo</label>
                        <InputText id="nome" class="form-control" @bind-Value="paciente.Nome" />
                        <ValidationMessage For="@(() => paciente.Nome)" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="nascimento" class="form-label">Data de Nascimento</label>
                        <InputDate id="nascimento" class="form-control" @bind-Value="paciente.Nascimento" />
                        <ValidationMessage For="@(() => paciente.Nascimento)" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="contato" class="form-label">Contato (Telefone/Email)</label>
                        <InputText id="contato" class="form-control" @bind-Value="paciente.Contato" />
                        <ValidationMessage For="@(() => paciente.Contato)" />
                    </div>

                    <div class="form-group mb-4">
                        <label for="endereco" class="form-label">Endereço</label>
                        <InputTextArea id="endereco" class="form-control" @bind-Value="paciente.Endereco" rows="3" />
                        <ValidationMessage For="@(() => paciente.Endereco)" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/pacientes" class="btn btn-outline-secondary">
                            Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Salvar Paciente
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Paciente paciente { get; set; }

    protected override void OnInitialized()
    {
        if (paciente is null)
        {
            paciente = new Paciente { Nascimento = DateTime.Today.AddYears(-20) };
        }
    }

    private async Task HandleValidSubmit()
    {
        paciente.Nascimento = DateTime.SpecifyKind(paciente.Nascimento, DateTimeKind.Utc);

        try
        {
            await PacienteService.AddAsync(paciente);
            Navigation.NavigateTo("/pacientes");
        }
        catch (DbUpdateException ex) when
        (ex.InnerException is PostgresException pg && pg.SqlState == "23505")
        {
            await JSRuntime.InvokeVoidAsync("alert", "CPF já cadastrado!");
        }
    }
}